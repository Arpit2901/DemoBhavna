package interestCalci;

public class calculateInterest {
	private int r,t,age,in;
	private long p;
	private char gender;
	

	public calculateInterest( long p,int r, int t,  int in,int age, char gender) {
		super();
		this.r = r;
		this.t = t;
		this.age = age;
		this.in = in;
		this.p = p;
		this.gender = gender;
	}
}
	public void check() {
		if(this.in==1) {
			calSI();
		}else if(this.in==2) {
			calCI();
		}else {
			System.out.println("wrong choice");
		}
	}
	public void calSI() {
		long i=(this.p*this.r*this.t)/100;
	}
