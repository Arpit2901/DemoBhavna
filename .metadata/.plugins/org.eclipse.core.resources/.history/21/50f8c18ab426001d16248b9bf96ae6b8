package interestCalci;

public class calculateInterest {
	private int r,t,age,in;
	private long p;
	private char gender;
	private int n=12;
	

	public calculateInterest( long p,int r, int t,  int in,int age, char gender) {
		super();
		this.r = r;
		this.t = t;
		this.age = age;
		this.in = in;
		this.p = p;
		this.gender = gender;
	}
}
	public void check() {
		
		if(this.in==1) {
			calSI();
		}else if(this.in==2) {
			calCI();
		}else {
			System.out.println("wrong choice");
		}
	}
	public void calSI() {
		long a=(this.p*this.r*this.t)/100;
		System.out.print("Simple interest calculated="+(a-this.p));
	}
	public void calCI() {
		double a=this.p * Math.pow(1 + (this.r / this.n), this.n * this.t);
	}

}
